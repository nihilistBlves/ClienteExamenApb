@model ClienteExamenApb.Models.Evento

@{
    ViewData["Title"] = "UpdateEventoCategoria";
    List<Categoria> categorias = (List<Categoria>) ViewData["CATEGORIAS"];
}

<h1>Cambiar categoria de evento</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input name="idevento" hidden class="form-control" value="@Model.IdEvento"/>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input class="form-control" value="@Model.Nombre" disabled/>
            </div>
            <div class="form-group">
                <label class="control-label">Artista</label>
                <input class="form-control" value="@Model.Artista" disabled/>
            </div>
            <div class="form-group">
                <label class="control-label">Categoria</label>
                <select name="idcategoria" class="form-control-sm">
                    @foreach (Categoria categoria in categorias) {
                        if (categoria.IdCategoria == Model.IdCategoria) {
                            <option value="@categoria.IdCategoria" selected>@categoria.Nombre</option>
                        }
                        else {
                            <option value="@categoria.IdCategoria">@categoria.Nombre</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar categoria" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EventosByCategoria" asp-route-idcategoria="@Model.IdCategoria" class="btn btn-secondary">Volver al listado de categoria</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
